<RadzenButton ButtonType="ButtonType.Submit" ButtonStyle="ButtonStyle.Secondary" Text="@SaveButtonText"
	Icon="@SaveButtonIcon" class="mb-1 mb-md-0" IsBusy="IsBussy" BusyText="Salvando" />

@if (ShowCancelLink)
{
  <NavLink href="@CancelLinkRoute">
    <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="close" Text="Cancelar" />
  </NavLink>
}
else
{
  <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="close" Text="Cancelar"
                Click="OnCloseBtnClicked"/>
}

@code {

	[CascadingParameter]
	public bool IsBussy { get; set; }
  
	[Parameter]
	public string SaveButtonText { get; set; } = "Guardar";

	[Parameter]
	public string SaveButtonIcon { get; set; } = "save";

	[Parameter]
	public string CancelLinkText { get; set; } = "Cancelar";

	[Parameter]
	public string CancellinkIcon { get; set; } = "close";

	[Parameter]
	public string? CancelLinkRoute { get; set; }
  
  [Parameter]
  public bool ShowCancelLink { get; set; } = true;
  
  [Parameter]
  public EventCallback OnCloseBtnClicked { get; set; }
}
