<RadzenCard>
  <EditForm Model="@ActividadModel" OnValidSubmit="OnSubmit">
    <DataAnnotationsValidator/>
    <div class="mb-3">
      <RadzenLabel Text="Nombre Actividad"/>
      <div class="mt-1">
        <RadzenTextBox @bind-Value="ActividadModel.Nombre" class="w-100"/>
        <ValidationMessage For="() => ActividadModel.Nombre"/>
      </div>
    </div>
    <div class="mb-2">
      @if (ShowCancelLink)
      {
        <FormButtons CancelLinkRoute="actividadList"/>
      }
      else
      {
        <FormButtons ShowCancelLink="false"
                     OnCloseBtnClicked="OnCancel"/>
      }
    </div>
  </EditForm>
</RadzenCard>