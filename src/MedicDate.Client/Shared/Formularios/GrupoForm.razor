<RadzenCard>
	<EditForm Model="@GrupoModel" OnValidSubmit="OnSubmit">
		<DataAnnotationsValidator />
		<div class="mb-3">
			<RadzenLabel Text="Nombre Grupo" />
			<div class="mt-1">
				<RadzenTextBox @bind-Value="GrupoModel.Nombre" class="w-100" />
				<ValidationMessage For="() => GrupoModel.Nombre" />
			</div>
		</div>
		<div class="mb-2">
			<FormButtons CancelLinkRoute="grupoList" />
		</div>
	</EditForm>
</RadzenCard>