<RadzenCard>
	<EditForm Model="@EspecialidadModel" OnValidSubmit="OnSubmit">
		<DataAnnotationsValidator />

		<div class="mb-3">
			<RadzenLabel Text="Nombre Especialidad" />
			<div class="mt-1">
				<RadzenTextBox @bind-Value="EspecialidadModel.NombreEspecialidad" class="w-100" />
				<ValidationMessage For="() => EspecialidadModel.NombreEspecialidad" />
			</div>
		</div>
		<div class="mb-2">
			<FormButtons CancelLinkRoute="especialidadList" />
		</div>
	</EditForm>
</RadzenCard>